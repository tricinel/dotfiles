theme = tokyonight_night
background = #09110b
cursor-color = #35e3c1

window-padding-x = 4,2
window-padding-y = 6,0
macos-titlebar-style = tabs
macos-window-shadow = false
macos-option-as-alt = left

font-family = JetBrainsMono Nerd Font
font-size = 14

shell-integration-features = no-cursor,title
cursor-style = block
mouse-hide-while-typing = true
bold-is-bright = true

confirm-close-surface = false
window-save-state = always

keybind = super+k=clear_screen
keybind = super+comma=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+zero=reset_font_size
keybind = super+r=reload_config

keybind = alt+left=goto_split:left
keybind = alt+down=goto_split:bottom
keybind = alt+up=goto_split:top
keybind = alt+right=goto_split:right

keybind = alt+a>backslash=new_split:right
keybind = alt+a>minus=new_split:down
keybind = alt+a>d=close_surface

keybind = cmd+shift+up=resize_split:up,50
keybind = cmd+shift+down=resize_split:down,50
keybind = cmd+shift+left=resize_split:left,50
keybind = cmd+shift+right=resize_split:right,50
keybind = cmd+shift+zero=equalize_splits

# turn full screen off
keybind = cmd+enter=ignore
